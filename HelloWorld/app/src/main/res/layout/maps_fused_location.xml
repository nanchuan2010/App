<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lzw.myapp.Maps.FusedLocationActivity"
    tools:ignore="MergeRootFrame">

    <Button
        android:id="@+id/btnNoPower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick"
        android:text="NO POWER" />

    <Button
        android:id="@+id/btnLowPower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick"
        android:text="LOW POWER" />

    <Button
        android:id="@+id/btnBalanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick"
        android:text="BALANCED" />

    <Button
        android:id="@+id/btnHighAccuracy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick"
        android:text="HIGH ACCURACY" />

    <Button
        android:id="@+id/btnLocationSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doClick"
        android:text="Location Setting" />

    <TextView
        android:id="@+id/mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current mode is" />

    <TextView
        android:id="@+id/priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current priority is BALANCED" />
</LinearLayout>
